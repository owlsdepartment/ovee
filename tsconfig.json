{
    "compilerOptions": {
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "noImplicitAny": true,
        "lib": ["ES2017", "ES7", "ES6", "DOM"],
        "target": "ESNext",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "plugins": [
            { "transform": "@zerollup/ts-transform-paths" }
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}