{
    "extends": "../../tsconfig.json",

    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist/src",
        "jsx": "react-jsx",
        "jsxImportSource": "@/jsx",
        "paths": {
