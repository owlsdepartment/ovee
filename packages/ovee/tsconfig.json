{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist/types",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "lib": ["ES2017", "ES7", "ES6", "DOM"],
        "outDir": "./dist/src",
        "target": "ES6",
        "strict": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "paths": {
            "src": ["./src"],
            "tests": ["./tests"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
}