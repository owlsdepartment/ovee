    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-lit": "^1.2.0",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "ts-jest": "^26.2.0",
    "typescript": "3.9.7"
  },
  "workspaces": [
    "packages/*"
